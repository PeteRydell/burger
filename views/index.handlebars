<div class="container">
	<div class="row">
    <div class="col-md-12 text-center" id="top-bar">
      <img src="/public/assets/image/burger-logo.png">
      <h1>Eat Da Burger</h1>
    </div>
    <div class="col-md-12 text-center" class="eat">
      <h2>So many burgers to devour!</h2>

      <div id="not-devoured">
        {{#each burgers}}
          {{#unless this.devoured}}
            <div>
              {{burger_name}}
              <button class="change-devour" data-id="{{id}}" data-newdevour="{{devour}}" >
                {{#if devour}}Devour it!{{else}}Devoured!{{/if}}
              </button>
            </div>  
          {{/unless}}
        {{/each}}
      </div>

      <h2>Burgers must be devoured!</h2>

      <div id="devoured">
        {{#each burgers}}
          {{#if this.devoured}}
            <div>
              {{burger_name}}
            </div>    
          {{/if}}
        {{/each}}
      </div>
      </div>
  </div>
</div>
<div class="col-md-12 text-center" class="eat">
  <h2>Add a burger</h2>
  <form class="create-form" action= "/api/burgers" method="POST">

    <div class="form-group">
      <label for="ca">Burger Name:</label>
      <input type="text" name="burger_name">
    </div>

    <button type="submit">Add burger</button>
  </form>
</div>